{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Client (Vite)",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/client/src",
      "command": "npm run dev",
      "request": "launch"
    },
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
